<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySubscription"
    android:orientation="vertical"
    android:background="#1a1a1a"

    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:textColor="#f5f5f5"
        android:textAlignment="center"
        android:text="My Subscription"
        android:drawableLeft="@drawable/back"



        />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="#635f62"

         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/atype"
             android:text="ACCOUNT TYPE"
             android:textAlignment="center"

             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/subscription"
             android:text="SUBSCRIPTION"
             android:layout_marginLeft="20sp"
             android:layout_marginRight="20sp"
             android:textColor="#f5f5f5"


             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/fagent"
             android:hint="Free Agent Account"
             android:layout_marginRight="20sp"
             android:layout_marginLeft="20sp"
             android:textSize="20sp"
             android:textColorHint="#f5f5f5"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="RENEWAL DATE"
             android:id="@+id/rdate"
             android:layout_marginLeft="20sp"
             android:layout_marginRight="20sp"
             android:layout_marginTop="10sp"
             android:textColor="#f5f5f5"


             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/date"
             android:layout_marginLeft="20sp"
             android:layout_marginRight="20sp"

             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="This account does not have renewal date because it is a free agent account"
             android:textColor="#c4c4c4"
             android:id="@+id/textex"
             android:layout_marginLeft="20sp"
             android:layout_marginRight="20sp"
             android:layout_marginBottom="20sp"
             />




     </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbackground"
        android:text="Update My Subscription"
        android:textColor="#f5f5f5"
        android:id="@+id/update"
        android:textAlignment="center"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel My Subscription"
        android:textColor="#f5f5f5"
        android:id="@+id/cancel"
        android:textAlignment="center"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"

        />




</LinearLayout>