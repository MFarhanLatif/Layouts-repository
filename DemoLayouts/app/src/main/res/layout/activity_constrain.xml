<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constrain"
    android:background="#1a1a1a"

    >


    <ImageView
        android:id="@+id/imageView1c"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/image1"
        app:layout_constraintBottom_toTopOf="@+id/textview1c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview1c"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="35sp"
        android:paddingRight="35sp"
        android:text="  Invite Your Friends"


        android:textColor="#f5f5f5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/textview2c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView1c" />

    <TextView
        android:id="@+id/textview2c"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:paddingLeft="35sp"
        android:paddingRight="35sp"
        android:text=" After they sign up, you each get. 1 Free month of Pro Subscription"
        android:textColor="#e3dad6"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btnsmsc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview1c" />

    <Button

        android:id="@+id/btnsmsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15dp"


        android:layout_marginRight="20sp"
        android:layout_marginStart="8dp"
        android:background="#4ca64c"
        android:text="SMS"
        android:textColor="#f5f5f5"
        app:layout_constraintBottom_toTopOf="@+id/btnemailc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnemailc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="8dp"
        android:background="#f5f5f5"
        android:text="Email"
        android:textColor="#1a1a1a"
        app:layout_constraintBottom_toTopOf="@+id/btnfacebookc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnfacebookc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="8dp"
        android:background="#4553c1"
        android:text="facebook"
        android:textColor="#f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>